{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    }
  ],
  "__requires": [
    { "type": "grafana", "id": "grafana", "name": "Grafana", "version": "10.0.0" },
    { "type": "panel", "id": "stat", "name": "Stat", "version": "" },
    { "type": "panel", "id": "timeseries", "name": "Time series", "version": "" },
    { "type": "datasource", "id": "prometheus", "name": "Prometheus", "version": "" }
  ],
  "title": "MySQL Replication",
  "schemaVersion": 36,
  "version": 1,
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Seconds Behind (coredb2)",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        { "expr": "max(mysql_replica_seconds_behind{host=\"coredb2\"})", "refId": "A" }
      ]
    },
    {
      "id": 2,
      "type": "stat",
      "title": "IO / SQL Running (coredb2)",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        { "expr": "max(mysql_replica_io_running{host=\"coredb2\"})", "refId": "A" },
        { "expr": "max(mysql_replica_sql_running{host=\"coredb2\"})", "refId": "B" }
      ]
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "Seconds Behind Over Time",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        { "expr": "mysql_replica_seconds_behind", "legendFormat": "{{host}}", "refId": "A" }
      ]
    }
  ]
}

