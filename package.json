{
  "name": "dailey-media-api",
  "version": "1.0.0",
  "description": "Standalone media API for the DAILEY ecosystem - handles file uploads, processing, and delivery",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "dev": "PORT=4100 nodemon src/index.js",
    "dev:backend": "PORT=4100 nodemon src/index.js",
    "dev:frontend": "cd web && npm run dev",
    "start": "PORT=4100 node src/index.js",
    "preflight": "node src/scripts/preflight.js",
    "start:preflight": "npm run preflight && PORT=4100 node src/index.js",
    "minio:install": "./scripts/installMinio.sh",
    "minio": "./scripts/startMinio.sh",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --runInBand",
    "lint": "eslint src",
    "build": "echo 'Build step - add Docker build here'",
    "migrate": "node src/scripts/migrate.js",
    "pm2:start": "npx pm2 start ecosystem.config.cjs",
    "pm2:start:backend": "npx pm2 start ecosystem.config.cjs --only dmapi-backend",
    "pm2:start:frontend": "npx pm2 start ecosystem.config.cjs --only dmapi-frontend",
    "pm2:stop": "npx pm2 stop ecosystem.config.cjs",
    "pm2:restart": "npx pm2 restart ecosystem.config.cjs",
    "pm2:restart:fresh": "npx pm2 delete dmapi-backend dmapi-frontend && npx pm2 start ecosystem.config.cjs",
    "pm2:reload": "npx pm2 reload ecosystem.config.cjs",
    "pm2:delete": "npx pm2 delete ecosystem.config.cjs",
    "pm2:logs": "npx pm2 logs",
    "pm2:logs:backend": "npx pm2 logs dmapi-backend",
    "pm2:logs:frontend": "npx pm2 logs dmapi-frontend",
    "pm2:status": "npx pm2 status",
    "check:ports": "lsof -i :4100 && lsof -i :5174",
    "check:health": "curl http://localhost:4100/health && curl http://localhost:5174/api/upload/formats",
    "migrate:local-s3": "node scripts/migrateLocalToS3.js"
  },
  "keywords": [
    "media",
    "api",
    "file-upload",
    "image-processing",
    "dailey",
    "microservice"
  ],
  "author": "Dailey Software",
  "license": "UNLICENSED",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.882.0",
    "@aws-sdk/s3-request-presigner": "^3.882.0",
    "@napi-rs/canvas": "^0.1.80",
    "bcrypt": "^5.1.1",
    "bullmq": "^4.14.1",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "exifr": "^7.1.3",
    "express": "^4.19.2",
    "express-rate-limit": "^8.1.0",
    "express-slow-down": "^3.0.0",
    "express-validator": "^7.2.1",
    "fluent-ffmpeg": "^2.1.2",
    "helmet": "^8.0.0",
    "hpp": "^0.2.3",
    "ioredis": "^5.4.1",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "libreoffice-convert": "^1.5.1",
    "marked": "^12.0.2",
    "mime-types": "^3.0.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.11.0",
    "nanoid": "^5.0.7",
    "node-html-parser": "^6.1.13",
    "pdf-lib": "^1.17.1",
    "pdfjs-dist": "^3.11.174",
    "pdfkit": "^0.15.1",
    "pm2": "^6.0.13",
    "prom-client": "^14.2.0",
    "qrcode": "^1.5.4",
    "redis": "^5.8.2",
    "sharp": "^0.34.3",
    "speakeasy": "^2.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "tesseract.js": "^6.0.1",
    "which": "^4.0.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "eslint": "^9.9.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jonndailey/dailey-media-api.git"
  }
}
