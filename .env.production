# Dailey Media API Production Environment

# Server Configuration
NODE_ENV=production
PORT=4000
HOST=0.0.0.0

# DAILEY CORE Integration
DAILEY_CORE_URL=https://core.dailey.dev

# Database Configuration
DATABASE_URL=mysql://dailey_user:CHANGE_THIS_PASSWORD@localhost:3306/dailey_media_prod
DATABASE_POOL_SIZE=20

# Redis Configuration  
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD
REDIS_DB=0

# Storage Configuration (S3)
STORAGE_TYPE=s3
S3_ENDPOINT=https://us-east-1.linodeobjects.com
S3_REGION=us-east-1
S3_BUCKET=dailey-media-prod
S3_ACCESS_KEY_ID=CHANGE_THIS_ACCESS_KEY
S3_SECRET_ACCESS_KEY=CHANGE_THIS_SECRET_KEY
S3_FORCE_PATH_STYLE=false
S3_PUBLIC_BUCKET=dailey-media-public-prod

# Security Configuration
JWT_SECRET=CHANGE_THIS_TO_A_VERY_SECURE_RANDOM_STRING_IN_PRODUCTION
JWT_EXPIRY=1h
JWT_REFRESH_EXPIRY=7d
BCRYPT_ROUNDS=12

# CORS Configuration
CORS_ORIGINS=https://dailey.dev,https://app.dailey.dev,https://api.dailey.dev

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
AUTH_RATE_LIMIT_REQUESTS=5
UPLOAD_RATE_LIMIT_REQUESTS=10
API_RATE_LIMIT_REQUESTS=1000

# File Processing
MAX_FILE_SIZE=104857600
ALLOWED_FORMATS=jpg,jpeg,png,gif,webp,heic,heif,avif,tiff,cr2,cr3,nef,arw,dng,mp4,mov,avi,mkv,mp3,wav,pdf,doc,docx
VARIANT_SIZES=sm:640,md:1280,lg:1920,xl:2560
MAX_FILES_PER_UPLOAD=10
THUMBNAIL_QUALITY=80

# Monitoring and Logging
LOG_LEVEL=info
METRICS_ENABLED=true
SENTRY_DSN=https://YOUR_SENTRY_DSN@sentry.io/PROJECT_ID
NEW_RELIC_LICENSE_KEY=YOUR_NEW_RELIC_LICENSE_KEY

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/ssl/certs/fullchain.pem
SSL_KEY_PATH=/etc/ssl/certs/privkey.pem
FORCE_HTTPS=true

# Performance Configuration
COMPRESSION_LEVEL=6
CACHE_TTL=3600
MAX_CONCURRENT_UPLOADS=50

# CDN Configuration
CDN_URL=https://cdn.dailey.dev

# Notification Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Development Settings (disabled in production)
DEBUG_MODE=false
ENABLE_DEBUG_ROUTES=false